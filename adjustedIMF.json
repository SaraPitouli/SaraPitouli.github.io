{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "Adjusted IMF lending",
      "subtitle":"Proportion of credit outstanding to all members as a percentage of global GDP, Source: IMF",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  
  "data":{"url": "https://raw.githubusercontent.com/SaraPitouli/SaraPitouli.github.io/main/week2/data_graph2_task2.csv"},

  "transform": [{"calculate": "datum.Totals/1000000000", "as": "billions"}],

  "height": 300,
  "width": 300,

  
  "mark": {
    "type": "bar",
    "color": "#86d0bb"},

"encoding": {
