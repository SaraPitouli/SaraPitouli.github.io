       "field": "Year",
       "type": "temporal",
       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45}},

      "y": {
        "field": "percent",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}}
}
